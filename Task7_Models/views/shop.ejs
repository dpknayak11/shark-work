<!-- // includes the head.ejs file which is required for the HTML head tag -->
<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <!-- // includes the navigation.ejs file which cam be used for the navigation bar  -->
    <%- include('includes/navigation.ejs') %>

    <main>
        <!-- // checks if any product has been submitted -->
        <% if (prods.length > 0) { %>
            <div class="grid">
                <!-- // loops through the submitted products -->
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <!-- // prints the title of the product -->
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                        <img 
src="data:image/svg+xml;base64," alt="" />    
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$50</h2>
                            <p class="product__description">A very interesting book about so many even more interesting things!</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <!-- // if there are no products, then this line prints an error message -->
            <h1>No Products Found!</h1>
        <% } %>
    </main>
    <!-- // includes the ejs file for the HTML ending tags -->
<%- include('includes/end.ejs') %>