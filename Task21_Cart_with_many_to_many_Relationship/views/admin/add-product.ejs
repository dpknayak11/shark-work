<!-- include the head.ejs in head section -->
<%- include('../includes/head.ejs') %>
</head>
<body>
    <!-- include the navigation.ejs in body section  -->
   <%- include('../includes/navigation.ejs') %>

    <main>
        <!-- form with action and method -->
                <form class="product-form"
                action="/admin/<%= isEdit ? 'edit-product' : 'add-product' %>"
                method="POST">
            <div class="form-control">
                <label for="title">Product Title</label>
                <input type="text" name="title" id="title"
                value="<%= isEdit ? product.title : '' %>"
                >
            </div>
            <div class="form-control">
                <label for="Product Description">Product Description</label>
                <textarea name="description" id="description" rows="6"><%= isEdit ? product.description : '' %></textarea>
            </div>
            <div class="form-control">
                <label for="Product Price">Product Price</label>
                <input type="number" name="price" id="price"
                value="<%= isEdit ? product.price : '' %>"
                >
            </div>
            <div class="form-control">
                <label for="Product image">Product Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl"
                value="<%= isEdit ? product.imageUrl : '' %>"
                >
            </div>
            <% if(isEdit){ %>
                <input type="hidden" value="<%= product.id %>"
                name="productId">
             <% } %> 
            <button class="btn" type="submit">
                <%= isEdit ? 'Save Changes' : 'Add Product' %>
            </button>
        </form>
    </main>
    <!-- include the end.ejs in the end -->
<%- include('../includes/end.ejs') %>
